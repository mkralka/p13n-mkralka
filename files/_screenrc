startup_message off
vbell off
escape ^\\
defscrollback 5000
hardstatus alwayslastline
hardstatus string '%{= kG}%-Lw%{= kW}%50> %n*%f %t%{= kG}%+Lw%< %{= kG}%-=%D %m/%d/%y | %C:%s %A | %1`%{-}'

# zero-indexes are such a drag. Make the window numbering match the
# keyboard
bind c screen 1
bind ^c screen 1
bind 0 select 10                                                            
screen 1
